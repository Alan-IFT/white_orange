# 环境变量配置示例
# 复制此文件为 .env.local 并填入你的实际配置

# =============================================================================
# 网站基本信息
# =============================================================================
NEXT_PUBLIC_SITE_NAME="个人博客"
NEXT_PUBLIC_SITE_DESCRIPTION="分享技术见解与生活感悟的个人博客"
NEXT_PUBLIC_SITE_URL="https://yourdomain.com"
NEXT_PUBLIC_LANGUAGE="zh-CN"
NEXT_PUBLIC_LOCALE="zh_CN"

# =============================================================================
# 作者信息
# =============================================================================
NEXT_PUBLIC_AUTHOR_NAME="你的名字"
NEXT_PUBLIC_AUTHOR_EMAIL="your@email.com"
NEXT_PUBLIC_AUTHOR_BIO="一个热爱技术与生活的开发者"
NEXT_PUBLIC_AUTHOR_AVATAR="/images/avatar.jpg"
NEXT_PUBLIC_AUTHOR_LOCATION="中国"

# =============================================================================
# 社交媒体链接
# =============================================================================
NEXT_PUBLIC_SOCIAL_TWITTER="@yourusername"
NEXT_PUBLIC_SOCIAL_GITHUB="yourusername"
NEXT_PUBLIC_SOCIAL_LINKEDIN="yourusername"

# =============================================================================
# SEO 配置
# =============================================================================
NEXT_PUBLIC_SEO_KEYWORDS="博客,技术博客,前端开发,后端技术,全栈开发,React,Next.js,JavaScript,TypeScript,Node.js"
NEXT_PUBLIC_OG_IMAGE="/images/og-image.jpg"

# =============================================================================
# 图片和媒体配置
# =============================================================================
# 图片 CDN 地址（如 Cloudflare R2）
NEXT_PUBLIC_IMAGE_HOST="https://your-r2-domain.com"

# =============================================================================
# 分析和监控
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Plausible Analytics（可选，隐私友好的替代方案）
NEXT_PUBLIC_PLAUSIBLE_DOMAIN="yourdomain.com"
NEXT_PUBLIC_PLAUSIBLE_API_HOST="https://plausible.io"

# =============================================================================
# 评论系统配置（Giscus）
# =============================================================================
GISCUS_REPO="username/blog-comments"
GISCUS_REPO_ID="R_kgDOJxxxxxx"
GISCUS_CATEGORY="Announcements"
GISCUS_CATEGORY_ID="DIC_kwDOJxxxxxx"

# =============================================================================
# 云存储配置（用于图片上传等）
# =============================================================================
# Cloudflare R2 配置
R2_ACCESS_KEY_ID="your_access_key_id"
R2_SECRET_ACCESS_KEY="your_secret_access_key"
R2_BUCKET_NAME="your-bucket-name"
R2_ENDPOINT="https://xxx.r2.cloudflarestorage.com"
R2_PUBLIC_URL="https://your-r2-domain.com"

# =============================================================================
# 开发环境配置
# =============================================================================
# 构建模式
NODE_ENV="development"

# 部署模式 (export=静态导出, standalone=服务器模式)
NEXT_OUTPUT_MODE="standalone"

# 是否启用调试模式
DEBUG="false"

# 是否启用性能分析
ANALYZE="false"

# =============================================================================
# 可选功能开关
# =============================================================================
# 是否启用评论系统
ENABLE_COMMENTS="true"

# 是否启用搜索功能
ENABLE_SEARCH="true"

# 是否启用 RSS 订阅
ENABLE_RSS="true"

# 是否启用暗黑模式
ENABLE_DARK_MODE="true"

# 是否启用阅读进度条
ENABLE_READING_PROGRESS="true"

# 是否启用代码复制按钮
ENABLE_CODE_COPY="true"

# =============================================================================
# 高级配置
# =============================================================================
# 内容安全策略
CSP_REPORT_URI=""

# 错误监控（如 Sentry）
SENTRY_DSN=""

# 邮件服务配置（用于联系表单等）
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""

# =============================================================================
# 部署相关配置
# =============================================================================
# Vercel 项目配置
VERCEL_PROJECT_ID=""
VERCEL_ORG_ID=""
VERCEL_TOKEN=""

# 域名配置
DOMAIN=""
WWW_DOMAIN=""

# SSL 证书配置
SSL_CERT_PATH=""
SSL_KEY_PATH=""